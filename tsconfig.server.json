{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": "./server",
    "sourceMap": true,
    "noEmit": false,
    "jsx": "react"
  },
  "include": ["server/**/*.ts", "server/src/**/*"],
  "exclude": ["node_modules", "src/**/*"]
}
