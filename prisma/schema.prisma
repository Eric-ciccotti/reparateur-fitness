datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Booking {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  name          String
  email         String
  phone         String
  date          DateTime
  time          String
  equipmentType String
  message       String?
  status        String   @default("PENDING") // PENDING, AWAITING_PAYMENT, CONFIRMED, ERROR, CANCELLED
  payment_id    String?  // ID de paiement PayPlug
}
